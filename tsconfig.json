{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node", // Добавьте эту строку
    "strict": true,
    "esModuleInterop": true,    // Убедитесь, что это включено
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src/frontend"
  },
  "include": ["src/frontend/**/*"]
}